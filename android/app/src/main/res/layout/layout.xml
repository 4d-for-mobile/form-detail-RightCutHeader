<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="DuplicateIds,HardcodedText">

    <data>

        <!--ENTITY_VARIABLE-->
    </data>

    <!-- Generated with detail form template named "Right Cut Header Detail" -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- START EDITING HERE -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.qmobile.qmobileui.ui.parallax.VerticalScrollParallaxImageView
                    android:id="@+id/background_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Image"
                    android:scaleType="centerCrop"
                    app:imageTransform='@{"Blur"}'
                    app:imageUrl="___IMAGE_1___"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@tools:sample/avatars"
                    tools:ignore="MissingClass" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/shade_image_surface"
                    app:layout_constraintBottom_toBottomOf="@+id/background_image"
                    app:layout_constraintEnd_toEndOf="@+id/background_image"
                    app:layout_constraintStart_toStartOf="@+id/background_image"
                    app:layout_constraintTop_toTopOf="@+id/background_image" />

                <ImageView
                    android:id="@+id/___SPECIFIC_ID_1___"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="18dp"
                    android:contentDescription="Image"
                    app:imageTransform='@{"CropCircleWithBorder"}'
                    app:imageUrl="___IMAGE_1___"
                    app:layout_constraintBottom_toTopOf="@+id/___SPECIFIC_ID_2___"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/___SPECIFIC_ID_2___"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="2"
                    android:scrollbars="none"
                    android:text="___TEXT_2___"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@+id/___SPECIFIC_ID_3___"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/___SPECIFIC_ID_1___"
                    tools:text="My field 2" />

                <TextView
                    android:id="@+id/___SPECIFIC_ID_3___"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="2"
                    android:scrollbars="none"
                    android:text="___TEXT_3___"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/___SPECIFIC_ID_2___"
                    tools:text="My field 3" />

                <View
                    android:id="@+id/right_cut_header"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/right_cut_header"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/___LABEL_SPECIFIC_ID_4___"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:scrollbars="none"
                    android:text="___FIELD_LABEL_4___"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/background_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="My field 4 label" />

                <TextView
                    android:id="@+id/___SPECIFIC_ID_4___"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:scrollbars="none"
                    android:text="___TEXT_4___"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?colorOnSurface"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/___LABEL_SPECIFIC_ID_4___"
                    tools:text="My field 4" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- EVERYTHING BELOW WILL BE DUPLICATED FOR EACH FIELD YOU DROP AT THE BOTTOM OF THE
                 TEMPLATE IN THE PROJECT EDITOR -->

            <!--FOR_EACH_FIELD-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <!--IF_IS_RELATION-->
                <!-- IF THE DROPPED FIELD IS A RELATION, A BUTTON WILL BE DISPLAYED -->
                <Button
                    android:id="@+id/___BUTTON_ID___"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="___BUTTON___"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="My relation" />
                <!--END_IF_IS_RELATION-->
                <!--IF_IS_NOT_RELATION-->
                <!-- IF THE DROPPED FIELD IS NOT A RELATION, IT WILL EITHER BE AN
                IMAGE VIEW OR A TEXT VIEW, AND IT WILL HAVE A LABEL IN A TEXT VIEW -->
                <TextView
                    android:id="@+id/___LABEL_ID___"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:scrollbars="none"
                    android:text="___FIELD_LABEL___"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/___VALUE_ID___"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="My label" />

                <!--IF_IS_IMAGE-->
                <!-- IF THE DROPPED FIELD IS AN IMAGE -->
                <ImageView
                    android:id="@+id/___VALUE_ID___"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Image"
                    app:imageUrl="___IMAGE___"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/___LABEL_ID___" />
                <!--END_IF_IS_IMAGE-->
                <!--IF_IS_NOT_IMAGE-->
                <!-- IF THE DROPPED FIELD IS NOT AN IMAGE, THEN IT WILL BE A TEXT VIEW -->
                <TextView
                    android:id="@+id/___VALUE_ID___"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:scrollbars="none"
                    android:text="___TEXT___"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?colorOnSurface"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/___LABEL_ID___"
                    tools:text="My field" />
                <!--END_IF_IS_NOT_IMAGE-->

                <!--END_IF_IS_NOT_RELATION-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--END_FOR_EACH_FIELD-->
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
